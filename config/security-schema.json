{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "security config",
    "description": "安全配置文件schema",
    "type": "object",
    "properties":{
        "auth_type":{
            "description":"验证类型",
            "type":"string",
            "enum":["database","file","data"]
        },
        "options":{
            "description": "配置信息，auth_type为database，则为数据库连接参数，如果为file，则需要指定文件，如果为data，则需要指定数据",
            "type":"object",
            "properties": {
                "dbtype":{
                    "description": "数据库类型，支持mysql、mssql、oracle（需要安装相应package）",
                    "type":"string"
                },
                "host":{
                    "description": "主机地址",
                    "type":"string"
                },
                "user":{
                    "description": "用户名",
                    "type":"string"
                },
                "pwd":{
                    "description": "密码",
                    "type":"string"
                },
                "schema":{
                    "description": "数据库名",
                    "type":"string"
                }
            }    
        },

        "auth_fail_url":{
            "description": "鉴权失败跳转url，相对于根路径",
            "type":"string"
        }
    }
}