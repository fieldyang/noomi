				"resourceAuthority":"t_resource_authority"	//资源权限表名，默认t_resource_authority
			},*/
			//鉴权相关字段名映射，如果与默认值相同，则不用配置
			"columns":{
				"resourceId":"resource_id",					//资源id字段名，默认resource_id
