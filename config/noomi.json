	"security":{
		"save_type":0,				//同session配置
		"max_size":10000000,		//同session配置
		"redis":"default",			//同session配置
		//过滤器针对的路由路径，如果不设置，则默为/*，表示拦截所有请求(只针对路由)
		//"expressions":["/*"], 
		//数据库相关设置
		"dboption":{
			//数据库连接设置，如果没有配置database，则此项必填，否则使用数据库配置中的数据库connection manager
