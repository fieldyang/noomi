	//路由配置，文件方式
	"route":"route.json",
	//aop配置，如果为注解方式，则不用配置
	"aop":{
		"files":[],  		//子文件列表，表示可以加载的子aop文件
		//切点，可以配置多个
		"pointcuts":[{
			"id":"pointcut1",								//切点id，必填，不可重复
			//表达式，必填，符合该表达式的方法会被拦截，可以采用通配符
			//如下，第一个表示拦截实例名为userService的getInfo方法
			//第二个表示拦截实例名以service开头的所有实例的所有方法（实例必须加入实例工厂，即用注解或在instance中配置）
			"expressions":["userService.getInfo","service*.*"]   
		}],
		//切面，可以多个
		"aspects":[
			{
				"instance":"logAdvice",				//切面对应的实例名，必填
				"advices":[							//通知，必填
					{
						"pointcut_id":"pointcut1",	//通知对应的切点
						//通知类型，字符串，必填，取值范围:before(前置),after(后置),after-return(return),after-throw(抛出异常),around(环绕，即前后置)
						"type":"before",			
						"method":"before" 			//切面对应实例的方法名，字符串，必填
					},{
						"pointcut_id":"pointcut1",
						"type":"after",
						"method":"after"
					},{
						"pointcut_id":"pointcut1",
						"type":"after-return",
						"method":"afterReturn"
					},{
						"pointcut_id":"pointcut1",
						"type":"after-throw",
						"method":"throw"
					},{
						"pointcut_id":"pointcut1",
						"type":"around",
						"method":"around"
					}
				]
			}
		]
	},
	//aop文件配置方式
	"aop":"aop.json",
	//redis配置，当缓存、session、security采用存储方式为1时，必须设置
	//请参考npm redis中的redis设置
	"redis":[{
		"name":"default",
		"host":"localhost",
		"port":"6379"
	}],
	//redis文件配置方式
	"redis":"redis.json",
